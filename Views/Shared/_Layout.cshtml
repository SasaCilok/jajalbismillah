<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Masak Yuk</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Site.css">
</head>
<body class="outer-layout">
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Masak Yuk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Home/PenggunaDashboard">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Beranda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/KatalogResep">Katalog Resep</a></li>
                    @if (Session["UserId"] == null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer>
        @*<p>&copy; 2024 Masak Yuk | All Rights Reserved</p>*@

    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    /* Elemen pembungkus luar */
    .outer-layout {
        position: relative;
        z-index: 1000; /* Layer tertinggi */
    }

    /* Elemen konten dalam */
    .inner-content {
        position: relative;
        z-index: 10; /* Layer lebih rendah */
        background-color: rgba(255, 255, 255, 0.95); /* Transparansi opsional untuk memisahkan visual */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Opsional untuk menonjolkan layer */
    }

    .navbar-custom {
        background-color: #FFD700 !important; /* Warna kuning */
    }

        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: #000000 !important; /* Warna teks menjadi hitam */
        }

            .navbar-custom .nav-link:hover {
                color: #333333 !important; /* Warna teks saat hover */
            }

    .container {
        height: 200vh;
    }

</style>
